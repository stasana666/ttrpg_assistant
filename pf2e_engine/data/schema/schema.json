{
    "$schema": "https://json-schema.org/draft/2020-12/schema",

    "oneOf": [
        {
            "type": "object",
            "required": ["type", "name", "properties"],
            "properties": {
                "type": { "const": "pf2e_armor" },
                "name": { "type": "string" },
                "properties": {
                    "type": "object",
                    "properties": {
                        "armor_class_bonus": { "type": "integer" },
                        "dexterity_cap": { "type": "integer" }
                    },
                    "required": ["armor_class_bonus", "dexterity_cap"]
                }
            }
        },
        {
            "type": "object",
            "required": ["type", "name", "properties"],
            "properties": {
                "type": { "const": "pf2e_weapon" },
                "name": { "type": "string" },
                "properties": {
                    "type": "object",
                    "properties": {
                        "base_die_size": { "type": "integer" },
                        "damage_type": { "type": "string" }
                    },
                    "required": ["base_die_size", "damage_type"]
                }
            }
        }
    ]
}
